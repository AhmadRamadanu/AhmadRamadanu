#membuat contoh tuple

buah = ("durian", "apel", "anggur", "mangga", "rambutan")

#menampilkan tuple dengan perulangan
for i in buah :
      print(i)
      
a = 0
while a <len(buah) :
	print(buah[a])
	a += 1
	
buah = list(buah)

#mengupdate salah satu tuple
buah[2] = "jambu"
print(buah)

#menghapus salha satu tuple
buah.pop()
print(buah)

buah.remove("apel")
print(buah)

del buah[0:2]
print(buah)

#menambah tuple
buah.append("jeruk")
print(buah)

buah.extend(["sirsak", "manggis",])
print(buah)

buah.insert(3, "semangka")
print(buah)
